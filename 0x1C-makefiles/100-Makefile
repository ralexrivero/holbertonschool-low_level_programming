#makefile
#variables
CC = gcc
SRC = school.c main.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

#compilation

#compilation from updated sources
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

#delete temporary files
clean:
	$(RM) *.swp *~ $(NAME)

#delete object files
oclean:
	$(RM) $(OBJ)

#full clean
fclean: clean oclean

# forces recompilation from all sources
re: oclean all
